@model Question

<div class="card">
    <div class="card-body">
        <h1><i class="fas fa-edit"></i> Edit Question</h1>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="Title"><i class="fas fa-heading"></i> Title:</label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Content"><i class="fas fa-file-alt"></i> Content:</label>
                <textarea class="form-control" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save "></i> Save</button>
            <a asp-controller="QnA" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary mt-2"><i class="fas fa-times"></i> Cancel</a>
        </form>
    </div>
</div>
