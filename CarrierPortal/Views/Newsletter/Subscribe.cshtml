@model bool

@{
    ViewData["Title"] = "Subscribe";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 m-5">
            <div class="card text-center">
                <div class="card-body">
                    @if (Model)
                    {
                        <h2><i class="fas fa-check-circle text-success"></i> You are subscribed!</h2>
                        <form method="post" asp-action="unsubscribe">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times"></i> Unsubscribe
                            </button>
                        </form>
                    }
                    else
                    {
                        <h2><i class="fas fa-envelope"></i> Subscribe to our Newsletter</h2>
                        <form method="post" asp-action="Subscribed">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Subscribe
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
