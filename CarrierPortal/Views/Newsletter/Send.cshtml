<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 m-2">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Send" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="pdfFile" class="mb-2"><i class="fas fa-file-pdf"></i> Upload PDF:</label>
                            <input type="file" class="form-control-file" id="pdfFile" name="pdfFile" required>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-paper-plane"></i> Subscribe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
