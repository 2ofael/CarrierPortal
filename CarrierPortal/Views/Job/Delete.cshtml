@model Job

<h2>Delete Job</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Title: @Model.Title</h4>
        <p class="card-text">Description: @Model.Description</p>
        <p class="card-text">Salary: @Model.Salary</p>
        <p class="card-text">Location: @Model.Location</p>
        <p class="card-text">Posted Date: @Model.PostedDate</p>

        <p class="text-danger">Are you sure you want to delete this job?</p>

        <form asp-controller="Job" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Job" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
