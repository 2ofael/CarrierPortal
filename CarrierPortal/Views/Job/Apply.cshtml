@model Job

<h2><i class="fas fa-paper-plane"></i> Apply for Job</h2>

<div class="card">
    <div class="card-body">
        @if (TempData["ApplySuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["ApplySuccess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h4 class="card-title"><i class="fas fa-briefcase"></i> Job Title: @Model.Title</h4>
        <p class="card-text"><i class="fas fa-align-left"></i> Job Description: @Model.Description</p>

        <form asp-controller="Job" asp-action="Apply" method="post" enctype="multipart/form-data">
            <input type="hidden" name="jobId" value="@Model.Id" />

            <div class="form-group">
                <label for="Resume"><i class="fas fa-file-pdf"></i> Upload Resume (PDF format)</label>
                <input type="file" id="Resume" name="resume" accept=".pdf" class="form-control-file" />
                <small class="form-text text-muted"><i class="fas fa-info-circle"></i> Please upload your resume in PDF format.</small>
            </div>

            <button type="submit" class="btn btn-primary m-2"><i class="fas fa-check"></i> Apply</button>
            <a asp-controller="Job" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary m-2"><i class="fas fa-times"></i> Cancel</a>
        </form>
    </div>
</div>

