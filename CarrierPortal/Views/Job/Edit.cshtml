@model Job

<div class="card mt-2">
    <div class="card-body">
        <h2><i class="fas fa-edit"></i> Edit Job</h2>

        <form asp-controller="Job" asp-action="Edit" method="post">
            <div class="form-group">
                <label for="Title"><i class="fas fa-file-alt"></i> Title</label>
                <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" />
            </div>

            <div class="form-group">
                <label for="Description"><i class="fas fa-align-left"></i> Description</label>
                <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
            </div>

            <div class="form-group">
                <label for="Salary"><i class="fas fa-dollar-sign"></i> Salary</label>
                <input type="text" id="Salary" name="Salary" class="form-control" value="@Model.Salary" />
            </div>

            <div class="form-group">
                <label for="Location"><i class="fas fa-map-marker-alt"></i> Location</label>
                <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" />
            </div>

            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-primary m-2"><i class="fas fa-save"></i> Save</button>
                <a asp-controller="Job" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary m-2"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

