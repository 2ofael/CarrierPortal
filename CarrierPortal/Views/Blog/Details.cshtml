@using System.Security.Claims;
@model BlogPost

@{
    ViewData["Title"] = "Blog Details";

}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <p class="card-text">@Html.Raw(Model.Content)</p>
                    <p class="card-text">Posted: @Model.CreatedAt.ToString("MMM dd, yyyy")</p>

                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || Model.ApplicationUserId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
                    {
                        <div class="mt-4">
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
                          @*  <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Delete</a>*@
                            <form asp-controller="Blog" asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this job?')">
                                <button type="submit" class="btn btn-danger mb-3" data-action="delete"><i class="fas fa-trash"></i> Delete</button>
                            </form>
                        </div>
                    }

                    <div class="mt-4">
                        <h4>Vote</h4>
                        <div class="btn-group" role="group" aria-label="Vote Buttons">
                            <button type="button" class="btn btn-primary" id="upvote">Upvote</button>
                            <button type="button" class="btn btn-primary" id="downvote">Downvote</button>

                            @if (User.IsInRole("Admin") && !Model.IsApproved)
                            {
                                <form method="post" asp-action="ApproveBlog">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success">Approve Blog</button>
                                </form>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#upvote").click(function () {
                // Implement upvote logic here
            });

            $("#downvote").click(function () {
                // Implement downvote logic here
            });
        });
    </script>
}
