@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/custombootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)

</head>
<body>



    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0"
                                            style="width:auto">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="register" asp-controller="account" class="nav-link">Register</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="login" asp-controller="account" class="nav-link">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>















    <div class="row">
        <div class="col-2 m-10">
            <div class="container">
                <ul class="list-group" m-10>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Search" asp-controller="QnA" class="text-decoration-none">
                            <i class="fas fa-search"></i> Search
                        </a>
                        <span class="badge bg-primary rounded-pill">1</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Create" asp-controller="QnA" class="text-decoration-none">
                            <i class="fas fa-plus"></i> Ask
                        </a>
                        <span class="badge bg-primary rounded-pill">1</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="QnA" class="text-decoration-none">
                            <i class="fas fa-list"></i> All Question
                        </a>
                        <span class="badge bg-primary rounded-pill">1</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="Job" class="text-decoration-none">
                            <i class="fas fa-user"></i> Asked by You
                        </a>
                        <span class="badge bg-primary rounded-pill">1</span>
                    </li>

                </ul>
            </div>

        </div>
        <div class="col-10">

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>

    </div>


    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
