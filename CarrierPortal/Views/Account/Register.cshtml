@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0 text-center">Registration</h1>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group text-center">
                        <label asp-for="Email"><i class="fas fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control rounded-pill" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="Phone"><i class="fas fa-phone"></i> Phone</label>
                        <input asp-for="Phone" class="form-control rounded-pill" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <label asp-for="Password"><i class="fas fa-lock"></i> Password</label>
                        <input asp-for="Password" class="form-control rounded-pill" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="ConfirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control rounded-pill" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="City"><i class="fas fa-city"></i> City</label>
                        <input asp-for="City" class="form-control rounded-pill" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block rounded-pill mt-2">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
