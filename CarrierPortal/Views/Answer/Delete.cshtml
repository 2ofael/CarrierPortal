@model Answer // Replace with your project's Answer model namespace

<div class="container">
    <h1>Delete Answer</h1>

    <div class="alert alert-warning">
        <p>Are you sure you want to delete this answer?</p>
        <ul class="list-unstyled">
            <li><strong>Content:</strong> @Model.Content</li>
            <li><strong>Creation Date:</strong> @Model.CreationDate</li>
            <li><strong>Votes:</strong> @Model.Votes</li>
            <li><strong>Is Approved:</strong> @Model.IsApproved</li>
        </ul>
    </div>

    <form asp-action="Delete" asp-controller="Answer" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-controller="Answer" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>
